# ===================
# RAG System Configuration
# ===================

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=rag_documents
QDRANT_API_KEY=  # Optional: set if authentication required

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=BAAI/bge-large-en-v1.5
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32
EMBEDDING_VECTOR_SIZE=1024  # For bge-large-en-v1.5

# LLM Configuration (Groq)
LLM_PROVIDER=groq  # Options: groq, huggingface
GROQ_API_KEY=  # Get your key at https://console.groq.com
GROQ_MODEL=moonshotai/kimi-k2-instruct-0905
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=512

# Re-ranker Configuration
RERANKER_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_TOP_K=3

# Retrieval Configuration
RETRIEVAL_TOP_K=10
RETRIEVAL_DENSE_WEIGHT=0.6
RETRIEVAL_SPARSE_WEIGHT=0.4

# Query Transformation Configuration
ENABLE_HYDE=false
ENABLE_MULTI_QUERY=false
MULTI_QUERY_COUNT=3

# Chunking Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Evaluation Configuration
EVAL_DATASET_SIZE=20
EVAL_OUTPUT_PATH=data/eval_report.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Data Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed

# Security
API_KEY=  # Optional: set for authentication
